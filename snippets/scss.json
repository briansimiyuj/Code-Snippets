{
    "Common css": {
		"prefix": "*",
		"body": [
		  "*{",
		  "    margin: 0;",
		  "    padding: 0;",
		  "    box-sizing: border-box;",
		  "}",
		  "",
		  "$1"
		],
		"description": "Common css"
    },

    "If Statement":{
        "prefix": "if",
		"body":[
			"@if($1){",
			"",
			"     $2",
			"",
			"}"
		],
		"description": "If Statement"
    },

    "If Statement Else":{
        "prefix": "ife",
		"body":[
			"@if($1){",
			"",
			"     $2",
			"",
			"}@else{",
			"",
			"     $3",
			"",
			"}"
		],
		"description": "If Statement Else"
    }
}